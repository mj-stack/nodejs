<%- include('../partials/head') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>
  <main class="container mx-auto mt-12 p-8">
    <div class="max-w-md mx-auto bg-white rounded-xl shadow-lg overflow-hidden">
      <div class="p-8">
        <div class="text-center mb-8">
          <i class="fas fa-user-circle text-5xl text-red-500 mb-4"></i>
          <h1 class="text-3xl font-bold text-gray-800">Welcome Back</h1>
          <p class="text-gray-500 mt-2">Please sign in to continue</p>
        </div>
        
        <form action="/login" method="POST">
          <%- include('../partials/errors') %>
          <div class="mb-4">
            <label for="email" class="block text-gray-700 font-semibold mb-2">
              <i class="fas fa-envelope text-red-500 mr-2"></i>Email
            </label>
            <div class="relative">
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Enter your email"
                value="<%= oldInput.email ? oldInput.email : '' %>"
                class="w-full pl-12 pr-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500"
                required
              />
              <span class="absolute left-4 top-3.5 text-gray-400">
                <i class="fas fa-at"></i>
              </span>
            </div>
          </div>

          <div class="mb-6">
            <label for="password" class="block text-gray-700 font-semibold mb-2">
              <i class="fas fa-lock text-red-500 mr-2"></i>Password
            </label>
            <div class="relative">
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Enter Your Password"
                class="w-full pl-12 pr-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500"
                required
              />
              <span class="absolute left-4 top-3.5 text-gray-400">
                <i class="fas fa-key"></i>
              </span>
            </div>
          </div>

          <button
            type="submit"
            class="w-full bg-red-500 text-white py-3 rounded-lg hover:bg-red-600 transition duration-300 flex items-center justify-center"
          >
            <i class="fas fa-sign-in-alt mr-2"></i>
            Sign In
          </button>


          <div class="mt-8 text-center text-gray-600">
            Don't have an account? 
            <a href="/signup" class="text-red-500 hover:text-red-600 font-semibold">Sign up</a>
          </div>
        </form>
      </div>
    </div>
  </main>
</body>
</html>