<%- include('../partials/head') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="bg-gray-50">
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-12 p-8">
        <div class="max-w-md mx-auto bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="p-8">
                <div class="text-center mb-8">
                    <h1 class="text-3xl font-bold text-gray-800">Create Account</h1>
                    <p class="text-gray-500 mt-2">Join our community today</p>
                </div>

                <form action="/signup" method="POST" class="space-y-6">
                    <%- include('../partials/errors') %>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-gray-700 font-semibold mb-2" for="firstName">First Name</label>
                            <input
                                type="text"
                                id="firstName"
                                name="firstName"
                                value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                                placeholder="John"
                                class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500"
                                required
                            />
                        </div>

                        <div>
                            <label class="block text-gray-700 font-semibold mb-2" for="lastName">Last Name</label>
                            <input
                                type="text"
                                id="lastName"
                                name="lastName"
                                value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                                placeholder="Doe"
                                class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500"
                            />
                        </div>
                    </div>

                    <div>
                        <label class="block text-gray-700 font-semibold mb-2" for="email">Email</label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            value="<%= oldInput.email ? oldInput.email : '' %>"
                            placeholder="john@example.com"
                            class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500"
                            required
                        />
                    </div>

                    <div>
                        <label class="block text-gray-700 font-semibold mb-2" for="password">Password</label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            placeholder="Create a strong password"
                            class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500"
                            required
                        />
                    </div>

                    <div>
                        <label class="block text-gray-700 font-semibold mb-2" for="confirmPassword">Confirm Password</label>
                        <input
                            type="password"
                            id="confirmPassword"
                            name="confirmPassword"
                            placeholder="Confirm your password"
                            class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:outline-none focus:border-red-500 focus:ring-1 focus:ring-red-500"
                            required
                        />
                    </div>

                    <div class="bg-gray-50 p-4 rounded-lg">
                        <p class="text-gray-700 font-semibold mb-3">I want to:</p>
                        <div class="flex space-x-6">
                            <label class="flex items-center space-x-2 cursor-pointer">
                                <input type="radio" name="userType" value="guest" class="text-red-500 focus:ring-red-500">
                                <span class="text-gray-700">Guest</span>
                            </label>
                            <label class="flex items-center space-x-2 cursor-pointer">
                                <input type="radio" name="userType" value="host" class="text-red-500 focus:ring-red-500">
                                <span class="text-gray-700">Host</span>
                            </label>
                        </div>
                    </div>

                    <div class="flex items-center space-x-2">
                        <input type="checkbox" name="terms" class="rounded text-red-500 focus:ring-red-500" required>
                        <label class="text-sm text-gray-600">
                            I agree to the <a href="/terms" class="text-red-500 hover:text-red-600">Terms of Service</a> and 
                            <a href="/privacy" class="text-red-500 hover:text-red-600">Privacy Policy</a>
                        </label>
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-red-500 text-white py-3 rounded-lg hover:bg-red-600 transition duration-300"
                    >
                        Create Account
                    </button>

                    <div class="mt-6 text-center text-gray-600">
                        Already have an account? 
                        <a href="/login" class="text-red-500 hover:text-red-600 font-semibold">Sign in</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>
</html>