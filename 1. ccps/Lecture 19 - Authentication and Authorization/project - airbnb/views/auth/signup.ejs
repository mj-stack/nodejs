<%- include('../partials/head') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/heroicons/1.0.6/outline.min.css">
</head>
<body class="bg-gray-50">
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-12 p-8 max-w-md bg-white rounded-xl shadow-lg border border-gray-100">
        <h1 class="text-3xl font-bold mb-8 text-center text-gray-800">
            <span class="ml-2">Register as a new user</span>
        </h1>
        
        <form action="/signup" method="POST" class="space-y-6">
            <div class="relative">

                <% if (errors.length > 0) { %>
                    <div class="bg-red-100 border border-red-400 text-red-200 px-4 py-3 rounded relative" role="alert">
                        <strong class="font-bold">Error!</strong>
                        <span class="block sm:inline">
                            <% errors.forEach(error => { %>
                                <li><%= error %></li> 
                            <% }); %>
                        </span>
                        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                            <i class="fas fa-times"></i>
                        </span>
                    </div>
                <% } %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute left-3 top-3.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <input
                    value="<%= oldInput.firstName ? oldInput.firstName : "" %>"
                    type="text"
                    name="firstName"
                    placeholder="First Name"
                    class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                    required
                />
            </div>

            <div class="relative">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute left-3 top-3.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <input
                    value="<%= oldInput.lastName ? oldInput.lastName : "" %>"
                    type="text"
                    name="lastName"
                    placeholder="Last Name"
                    class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                />
            </div>

            <div class="relative">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute left-3 top-3.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                </svg>
                <input
                    value="<%= oldInput.email ? oldInput.email : "" %>"
                    type="email"
                    name="email"
                    placeholder="test@example.com"
                    class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                    required
                />
            </div>

            <div class="relative">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute left-3 top-3.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                <input
                    type="password"
                    name="password"
                    placeholder="Enter Your Password"
                    class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                    required
                />
            </div>

            <div class="relative">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute left-3 top-3.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                <input
                    type="password"
                    name="confirmPassword"
                    placeholder="Confirm Your Password"
                    class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                    required
                />
            </div>

            <div class="p-4 bg-gray-50 rounded-lg space-y-2">
                <p class="text-gray-700 font-medium flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    User type:
                </p>
                <div class="flex space-x-6">
                    <label class="flex items-center space-x-2 cursor-pointer hover:text-red-500 transition">
                        <input type="radio" name="userType" value="guest" id="guest" class="text-red-500 focus:ring-red-500">
                        <span class="text-gray-700">Guest</span>
                    </label>
                    <label class="flex items-center space-x-2 cursor-pointer hover:text-red-500 transition">
                        <input type="radio" name="userType" value="host" id="host" class="text-red-500 focus:ring-red-500">
                        <span class="text-gray-700">Host</span>
                    </label>
                </div>
            </div>
            
            <div class="flex items-center space-x-2 p-4 bg-gray-50 rounded-lg">
                <input 
                    type="checkbox" 
                    name="terms" 
                    id="terms" 
                    class="rounded text-red-500 focus:ring-red-500 cursor-pointer"
                    required
                >
                <label for="terms" class="text-gray-700 cursor-pointer hover:text-red-500 transition">
                    I agree to the terms and conditions
                </label>
            </div>

            <button
                type="submit"
                class="w-full bg-red-500 text-white py-3 px-4 rounded-lg hover:bg-red-600 transition duration-300 font-medium shadow-sm hover:shadow-md flex items-center justify-center space-x-2"
            >
                <span>Sign Me Up</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
            </button>
        </form>
    </main>
</body>
</html>